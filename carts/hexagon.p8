pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
-- hello
#include include/math.lua

hex = {
 {.25,0},
 {.75,0},
 {1,.5},
 {.75,1},
 {.25,1},
 {0,.5},
}

plr_pos = 1
spd = 0.05

function _update()
    if btnp(⬅️) then
        plr_pos = iwrap(plr_pos-1, 1, 7)
    end
    
    if btnp(➡️) then
        plr_pos = iwrap(plr_pos+1, 1, 7)
    end

    r += spd
    if r > 1 then r = 0 end
end

off = 15
r = .5
function _draw()
    cls()
    print(plr_pos)
    dhex(20, 50, 50)
    dhex(100,10,10)


    d = lerp(20, 100, r)
    l = lerp(10, 50, 1-r)
    dhex(d,l,l)

    for i=1,6,1 do
       line(10+hex[i][1]*100, 10+hex[i][2]*100,50+hex[i][1]*20,50+hex[i][2]*20, i) 
    end

    spr(1,off+ hex[plr_pos][1] * 75, off + hex[plr_pos][2] * 75 ,  2, 2)
end

function dhex(f,x,y)
    for i=1,6,1 do
        w=iwrap(i+1,1,7)
        line(x+hex[i][1]*f, y+hex[i][2]*f, x+hex[w][1]*f, y+hex[w][2]*f, i)
    end
end
