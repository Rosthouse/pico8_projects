{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Pico8",
            "type": "process",
            "command": "pico8.exe",
            "args": [
                "-root_path",
                "${workspaceFolder}",
                "-windowed",
                "1"
            ],
            "options": {
                "cwd": "${env:PICO8}"
            },
            "problemMatcher": []
        }
    ]
}